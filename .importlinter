[importlinter]
root_packages=
    mlrun
    server
include_external_packages=True


[importlinter:contract:mlrun-common]
name=Common modules shouldn't import other mlrun utilities
type=forbidden
source_modules=
    mlrun.common

forbidden_modules=
    mlrun.artifacts
    mlrun.data_types
    mlrun.datastore
    mlrun.db
    mlrun.feature_store
    mlrun.frameworks
    mlrun.launcher
    mlrun.mlutils
    mlrun.model_monitoring
    mlrun.package
    mlrun.platforms
    mlrun.projects
    mlrun.runtimes
    mlrun.serving
    mlrun.execution
    mlrun.features
    mlrun.k8s_utils
    mlrun.kfpops
    mlrun.lists
    mlrun.model
    mlrun.render
    mlrun.run
    mlrun.secrets

ignore_imports =
    mlrun.config -> mlrun.db
    mlrun.utils.clones -> mlrun
    mlrun.utils.helpers -> mlrun

[importlinter:contract:mlrun-api]
name=MLRun modules shouldn't import MLRun API
type=layers
layers=
    server
    mlrun
